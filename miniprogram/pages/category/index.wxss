page{
  height: 100%;
}

.categoryView{
  height: 100%;
}

.content{
  height: 100%;
  display: flex;
}

.left{
  flex: 1;
}

.left-scroll{
  height: 100%;
}

.left-scroll-item{
  height: 80rpx;
  background-color: white;
}

.left-scroll-item-title{
  padding-top: 20rpx;
  height: 79rpx;
  font-size: 32rpx;
  color: #666666;
  display: flex;
  text-align: center;
  justify-content: center;
}

.left-scroll-item-title-active{
  padding-top: 20rpx;
  height: 79rpx;
  font-size: 32rpx;
  color: var(--themeColor);
  display: flex;
  text-align: center;
  justify-content: center;
  border-left: 2rpx solid currentColor;
}
.left-scroll-item-line{
  height: 1rpx;
  background-color: #f5f5f5;
}

.right{
  flex: 2;
  height: 100%;
}

.right-scroll{
  height: 100%;
}
.right-scroll-group{

}

.right-scroll-group-title{
  padding-top: 10rpx;
  color: #666666;
  text-align: center;
  font-size: 36rpx;
}

.right-scroll-group-content{
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
}

.right-scroll-item{
  width:29%;
  padding: 10rpx;
}

.right-scroll-item-image{
  width: 100%;
  height: 100rpx;
}

.right-scroll-item-title{
  text-align: center;
}
