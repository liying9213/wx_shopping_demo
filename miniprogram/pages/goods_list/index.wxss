/* pages/goods_list/index.wxss */
page{
  height: 100%;
}

.categoryListView{
  height: 100%;
}

.first_table{
  height: 100%;
}

.first_table_item{
  height: 160rpx;
  display: flex;
  border-bottom: 1rpx solid #f5f5f5;
}

.first_table_item_image{
  padding: 10rpx;
  flex: 2;
  height: 90%;
}

.first_table_item_content{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  flex: 3;
}

.first_table_item_content_title{
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.first_table_item_content_price{
  font-size: 32rpx;
  color: var(--themeColor);
}